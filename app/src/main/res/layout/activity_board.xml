<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Board"
    android:orientation="vertical"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@id/gridLayout"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/earth" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignRight="@id/gridLayout"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/moon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:layout_marginLeft="40pt"
        android:layout_marginTop="10pt"
        android:layout_toRightOf="@id/imageView"
        android:text="@string/score"
        android:textColor="@color/yellow"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayout"
        android:layout_marginLeft="5pt"
        android:layout_marginTop="10pt"
        android:layout_toRightOf="@id/textView"
        android:textColor="@color/yellow"
        android:textSize="36sp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/satellite" />

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn5"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn6"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="4"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn8"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="2"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageView
            android:id="@+id/btn9"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="4"
            android:visibility="visible"
            app:srcCompat="@drawable/satellite" />

        <ImageView
            android:id="@+id/btn10"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn11"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="5"
            android:layout_column="2"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn12"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="5"
            android:layout_column="4"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageView
            android:id="@+id/btn13"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="6"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/satellite" />

        <ImageView
            android:id="@+id/btn14"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="6"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn15"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="6"
            android:layout_column="4"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn16"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="7"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn17"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="7"
            android:layout_column="2"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/btn18"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="7"
            android:layout_column="4"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageButton
            android:id="@+id/btn19"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="8"
            android:layout_column="0"
            android:background="@android:color/black"
            android:onClick="touchBtn"
            app:srcCompat="@drawable/borderimagebutton" />

        <ImageView
            android:id="@+id/btn20"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="8"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/asteroid" />

        <ImageView
            android:id="@+id/btn21"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="8"
            android:layout_column="4"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/satellite" />
    </GridLayout>

</RelativeLayout>